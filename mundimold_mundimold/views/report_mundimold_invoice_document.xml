<?xml version="1.0"?>


<openerp>
<data>



<template id="report_mundimold_invoice_document">

    <t t-name="mundimold_mundimold.report_mundimold_invoice_document">
        <t t-call="web.external_layout">
        
            
    
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            
            <t t-set="color1" t-value="o.company_id.color1_qweb"/>
            <t t-set="color2" t-value="o.company_id.color2_qweb"/>
            
            <style>
              .cabaddress {
                  background-color: #<t t-esc='color2'/>;
              }
            </style>
            
            <t t-set="address">
                <div style="font-size:10pt" class="cabaddress">
                  <div style="padding:10px;">
                    <t t-if="o.partner_id.lang == 'en_US'">
                        BILL TO:<br/>
                     </t>
                    <address t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                    <div t-if="o.partner_id.vat" class="mt16">NIF: <span t-field="o.partner_id.vat"/></div>
                  </div>
                </div>
            </t>
            <div class="page">
              <br/>
              
                <style>
                  .cabinv {
                      background-color: #<t t-esc='color1'/>;
                  }
                </style>
              
              
              <div style="width:100%; color:#FFF; text-align: center; padding:7px;" class="cabinv">
                <strong><span style="text-transform: uppercase; font-size: 16pt; font-weight: bold;">
                    <span t-if="o.type == 'out_invoice' and o.state in ('open', 'in_payment', 'paid')">
                    <t t-if="o.partner_id.lang == 'en_US'">
                        INVOICE
                     </t>
                     <t t-elif="o.partner_id.lang == 'fr_FR'">
                        FACTURE
                     </t>
                     <t t-elif="o.partner_id.lang == 'it_IT'">
                        CONTO
                     </t>
                     <t t-else="">
                        FACTURA
                     </t>
                    </span>
                    
                    <span t-if="o.type == 'out_invoice' and o.state == 'draft'">
                    <t t-if="o.partner_id.lang == 'en_US'">
                        DRAFT INVOICE
                     </t>
                     <t t-elif="o.partner_id.lang == 'fr_FR'">
                        FACTURE
                     </t>
                     <t t-elif="o.partner_id.lang == 'it_IT'">
                        CONTO
                     </t>
                     <t t-else="">
                        FACTURA BORRADOR
                     </t>
                    </span>

                    
                    <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">
                    <t t-if="o.partner_id.lang == 'en_US'">
                        CANCELLED INVOICE
                     </t>
                     <t t-elif="o.partner_id.lang == 'fr_FR'">
                        FACTURE
                     </t>
                     <t t-elif="o.partner_id.lang == 'it_IT'">
                        CONTO
                     </t>
                     <t t-else="">
                        FACTURA CANCELADA
                     </t>
                    </span>

                    
                    <span t-if="o.type == 'out_refund'">
                    <t t-if="o.partner_id.lang == 'en_US'">
                        INVOICE REFUND
                     </t>
                     <t t-elif="o.partner_id.lang == 'fr_FR'">
                        FACTURE
                     </t>
                     <t t-elif="o.partner_id.lang == 'it_IT'">
                        CONTO
                     </t>
                     <t t-else="">
                        FACTURA RECTIFICATIVA
                     </t>
                    </span>

                    
                    <span t-if="o.type == 'in_refund'">
                    Vendor Credit Note
                    </span>
                    
                    <span t-if="o.type == 'in_invoice'">
                    Vendor Bill
                    </span>
                    
                    <!--<span t-field="o.number"/>-->
                </span></strong>
              </div>
                
                <t t-set="cod_proyecto" t-value="0"/>
                <t t-foreach="o.invoice_line_ids" t-as="line">
                  <t t-if="line.account_analytic_id">
                    <t t-set="cod_proyecto" t-value="line.account_analytic_id.name.split(' ', 1)[0]"/>
                  </t>
                </t>
                
                <style>
                  .invoicetop {
                      width: 100%;
                      border-spacing: 2px;
                      font-size: 10pt;
                  }
                  .invoicetop th {
                      background-color: #<t t-esc='color1'/>;
                      color: #FFF;
                      padding:6px;
                      text-align:center
                  }
                  .invoicetop td {
                      background-color: #<t t-esc='color2'/>;
                      color: #000;
                      padding:6px;
                      text-align:center
                  }
                  .col-auto mw-100 mb-2 {
                    padding:5px;
                  }
                  
                </style>

                <div id="informations" class="row mt32 mb32" style="margin-top:8px !important; margin-bottom:20px !important">
                    <div class="col-auto mw-100 mb-2" t-if="o.number" name="number" style="padding:5px 5px 5px 15px !important; width:20% !important">
                        <table class="invoicetop">
                          <thead>
                            <tr>
                             <th><strong>
                             <t t-if="o.partner_id.lang == 'en_US'">
                                INVOICE NUM
                             </t>
                             <t t-elif="o.partner_id.lang == 'fr_FR'">
                                DOCUMENT NO
                             </t>
                             <t t-elif="o.partner_id.lang == 'it_IT'">
                                DOCUMENTO NUMERO
                             </t>
                             <t t-else="">
                                Nº DE DOCUMENTO
                             </t>
                             </strong></th>
                            </tr>
                          </thead>
                          <tr>
                            <td><strong><p class="m-0" t-field="o.number"/></strong></td>
                          </tr>
                        </table>
                    </div>
                    <div class="col-auto mw-100 mb-2" t-if="o.date_invoice" name="invoice_date" style="padding:5px !important; width:20% !important">
                        <table class="invoicetop">
                          <thead>
                            <tr>
                             <th><strong>
                             <t t-if="o.partner_id.lang == 'en_US'">
                                INVOICE DATE
                             </t>
                             <t t-elif="o.partner_id.lang == 'fr_FR'">
                                DATE
                             </t>
                             <t t-elif="o.partner_id.lang == 'it_IT'">
                                DATA
                             </t>
                             <t t-else="">
                                FECHA DE FACTURA
                             </t>
                             </strong></th>
                            </tr>
                          </thead>
                          <tr>
                            <td><strong><p class="m-0" t-field="o.date_invoice" t-options='{"format": "dd/MM/yyyy"}'/></strong></td>
                          </tr>
                        </table>
                        
                    </div>

                    <div class="col-auto mw-100 mb-2" name="name" style="padding:5px !important; width:15% !important">
                      
                      <table class="invoicetop">
                          <thead>
                            <tr>
                             <th><strong>
                             <t t-if="o.partner_id.lang == 'en_US'">
                                OFFER
                             </t>
                             <t t-elif="o.partner_id.lang == 'fr_FR'">
                                OFFRE
                             </t>
                             <t t-elif="o.partner_id.lang == 'it_IT'">
                                OFFRIRE
                             </t>
                             <t t-else="">
                                OFERTA
                             </t>
                             </strong></th>
                            </tr>
                          </thead>
                          <tr>
                            <td>
                                <strong><p class="m-0"><span t-if="o.type != 'out_refund'" t-field="o.name"/><![CDATA[&nbsp;]]></p></strong>
                            </td>
                          </tr>
                        </table>
                      
                        
                    </div>
                    <div class="col-auto mw-100 mb-2" name="proyecto" style="padding:5px !important; width:20% !important">
                        <table class="invoicetop">
                          <thead>
                            <tr>
                             <th><strong>
                             <t t-if="o.partner_id.lang == 'en_US'">
                                PROJECT
                             </t>
                             <t t-elif="o.partner_id.lang == 'fr_FR'">
                                PROJET
                             </t>
                             <t t-elif="o.partner_id.lang == 'it_IT'">
                                BOZZA
                             </t>
                             <t t-else="">
                                PROYECTO
                             </t>
                             </strong></th>
                            </tr>
                          </thead>
                          <tr>
                            <td><strong><p class="m-0" t-esc="cod_proyecto"/></strong></td>
                          </tr>
                        </table>
                        
                    </div>
                    
                    <div class="col-auto mw-100 mb-2" name="ocompra" style="padding:5px !important; width:24% !important">
                        <table class="invoicetop">
                          <thead>
                            <tr>
                             <th><strong>
                             <t t-if="o.partner_id.lang == 'en_US'">
                                PURCHASE ORDER
                             </t>
                             <t t-elif="o.partner_id.lang == 'fr_FR'">
                                BON DE COMMANDE
                             </t>
                             <t t-elif="o.partner_id.lang == 'it_IT'">
                                ORDINAZIONE D'ACQUISTO
                             </t>
                             <t t-else="">
                                ORDEN DE COMPRA
                             </t>
                             </strong></th>
                            </tr>
                          </thead>
                          <tr>
                            <td><strong><p class="m-0" ><span t-esc="o.oc_cliente"/><![CDATA[&nbsp;]]></p></strong></td>
                          </tr>
                        </table>
                        
                    </div>
                    

                    <!--<div class="col-auto mw-100 mb-2" t-if="o.origin" name="origin">
                        <strong>Source:</strong>
                        <p class="m-0" t-field="o.origin"/>
                    </div>
                    <div class="col-auto mw-100 mb-2" t-if="o.partner_id.ref" name="customer_code">
                        <strong>Customer Code:</strong>
                        <p class="m-0" t-field="o.partner_id.ref"/>
                    </div>-->
                    <div name="reference" class="col-auto mw-100 mb-2" t-if="o.reference" style="display:none;">
                        <strong>Reference:</strong>
                        <p class="m-0" t-field="o.reference"/>
                    </div>
                </div>

                <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                <style>
                  .table thead tr {
                      background-color: #<t t-esc='color1'/>;
                  }
                </style>
                
                <table class="table table-sm o_main_table" name="invoice_line_table" style="font-size: 10pt;">
                    <thead>
                        <tr style="color: #FFF; padding:6px;">
                            <!-- TODO: remove in master -->
                            <t t-set="colspan" t-value="6"/>
                            <th class="text-left" style="padding:8px !important"><span>
                            <t t-if="o.partner_id.lang == 'en_US'">
                                DESCRIPTION
                             </t>
                             <t t-elif="o.partner_id.lang == 'fr_FR'">
                                DESCRIPTION
                             </t>
                             <t t-elif="o.partner_id.lang == 'it_IT'">
                                DESCRIZIONE
                             </t>
                             <t t-else="">
                                DESCRIPCIÓN
                             </t>
                            </span></th>
                            
                            <th class="d-none text-left" style="padding:8px !important"><span>Source Document</span></th>
                            
                            <th class="text-right" style="padding:8px !important"><span>
                            <t t-if="o.partner_id.lang == 'en_US'">
                                QUANTITY
                             </t>
                             <t t-elif="o.partner_id.lang == 'fr_FR'">
                                QUANTITÉ
                             </t>
                             <t t-elif="o.partner_id.lang == 'it_IT'">
                                QUANTITÀ
                             </t>
                             <t t-else="">
                                CANTIDAD
                             </t>
                            </span></th>
                            
                            <th t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" style="padding:8px !important"><span>
                            <t t-if="o.partner_id.lang == 'en_US'">
                                PRICE UNIT
                             </t>
                             <t t-elif="o.partner_id.lang == 'fr_FR'">
                                PRIX VOUS
                             </t>
                             <t t-elif="o.partner_id.lang == 'it_IT'">
                                PREZZO TU
                             </t>
                             <t t-else="">
                                PRECIO UD
                             </t>
                            </span></th>
                            
                            <th t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>Disc.(%)</span>
                                <!-- TODO: remove in master -->
                                <t t-set="colspan" t-value="colspan+1"/>
                            </th>
                            <!--<th t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Taxes</span></th>-->
                            <th class="text-right" style="padding:8px !important">
                            
                                <span groups="account.group_show_line_subtotals_tax_excluded">
                                <t t-if="o.partner_id.lang == 'en_US'">
                                    AMOUNT
                                 </t>
                                 <t t-elif="o.partner_id.lang == 'fr_FR'">
                                    MONTANT
                                 </t>
                                 <t t-elif="o.partner_id.lang == 'it_IT'">
                                    QUANTITÀ
                                 </t>
                                 <t t-else="">
                                    IMPORTE
                                 </t>
                                </span>
                                
                                <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                            </th>
                        </tr>
                    </thead>
                    
                    
                    
                    
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>

                        <t t-foreach="o.invoice_line_ids" t-as="line">

                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                    <td name="account_invoice_line_name">
                                      <t t-if="line.account_analytic_id">
                                        <span t-field="line.account_analytic_id.name"/><br/>
                                      </t>
                                      <span t-field="line.name"/>
                                      </td>
                                    <td class="d-none"><span t-field="line.origin"/></td>
                                    <td class="text-right">
                                        <span t-field="line.quantity"/>
                                        <span t-field="line.uom_id" groups="uom.group_uom"/>
                                    </td>
                                    <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span t-field="line.discount"/>
                                    </td>
                                    <!--<td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.invoice_line_tax_ids))"/>
                                    </td>-->
                                    <td class="text-right o_price_total">
                                        <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or o.invoice_line_ids[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td colspan="99">
                                        <strong class="mr16">
                                        <t t-if="o.partner_id.lang == 'en_US'">
                                            SUBTOTAL
                                         </t>
                                         <t t-elif="o.partner_id.lang == 'fr_FR'">
                                            SUBTOTAL
                                         </t>
                                         <t t-elif="o.partner_id.lang == 'it_IT'">
                                            SUBTOTAL
                                         </t>
                                         <t t-else="">
                                            SUBTOTAL
                                         </t>
                                        </strong>
                                        <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
                
                <style>
                  .invoicetotals {
                      font-size: 10pt;
                      border: 2px solid #FFF;
                  }
                  .invoicetop td {
                      padding:6px;
                  }
                  
                  .tdc1 {
                     background-color: #<t t-esc='color1'/>;
                  }
                  
                  .tdc2 {
                     background-color: #<t t-esc='color2'/>;
                     text-align: right;
                  }
                  
                  
                  </style>

                <div class="clearfix">
                    <div id="total" class="invoicetotals" style="font-size: 10pt;">
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto" style="padding-right:0px">
                            <table class="table table-sm;page-break-inside: avoid;" style="border: 2px solid #FFF;">
                                <t t-if="len(o.tax_line_ids) > 0">
                                    <tr>
                                        <td style="text-transform: uppercase; color:#FFF;" class="tdc1"><strong>
                                        <t t-if="o.partner_id.lang == 'en_US'">
                                                SUBTOTAL
                                             </t>
                                             <t t-elif="o.partner_id.lang == 'fr_FR'">
                                                SUBTOTAL
                                             </t>
                                             <t t-elif="o.partner_id.lang == 'it_IT'">
                                                SUBTOTAL
                                             </t>
                                             <t t-else="">
                                                SUBTOTAL
                                             </t>
                                             </strong></td>
                                        <td class="tdc2">
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                    <tr>
                                        <t t-if="len(o.tax_line_ids) == 1 and o.amount_untaxed == amount_by_group[2]">
                                            <td style="text-transform: uppercase; color:#FFF;" class="tdc1"><strong><span t-esc="amount_by_group[0]"/></strong></td>
                                            <td class="tdc2">
                                                <span t-esc="amount_by_group[3]"/>
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td style="text-transform: uppercase; color:#FFF;" class="tdc1">
                                                <strong><span t-esc="amount_by_group[0]"/>
                                                </strong>
                                            </td>
                                            <td class="tdc2">
                                                <span t-esc="amount_by_group[3]"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                                <tr>
                                    <td style="text-transform: uppercase; color:#FFF;" class="tdc1"><strong>
                                    <t t-if="o.partner_id.lang == 'en_US'">
                                        TOTAL
                                     </t>
                                     <t t-elif="o.partner_id.lang == 'fr_FR'">
                                        TOTAL
                                     </t>
                                     <t t-elif="o.partner_id.lang == 'it_IT'">
                                        TOTAL
                                     </t>
                                     <t t-else="">
                                        TOTAL
                                     </t>
                                    </strong></td>
                                    <td class="tdc2">
                                        <span t-field="o.amount_total"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <!--<p t-if="o.reference">
                    Please use the following communication for your payment : <b><span t-field="o.reference"/></b>
                </p>-->
                <p t-if="o.comment" name="comment">
                    <span t-field="o.comment"/>
                </p>
                
                <p style="font-size: 10pt;">
                    
                    <t t-if="o.partner_id.lang == 'en_US'">
                        Please consider that all the transfer's costs to send the payment to our bank are on client's charge.
                     </t>
                     <t t-elif="o.partner_id.lang == 'fr_FR'">
                        Por favor tome nota que todo gasto de transferencia para hacer llegar el pago a nuestro banco va por cuenta del cliente.
                     </t>
                     <t t-elif="o.partner_id.lang == 'it_IT'">
                        Por favor tome nota que todo gasto de transferencia para hacer llegar el pago a nuestro banco va por cuenta del cliente.
                     </t>
                     <t t-else="">
                        Por favor tome nota que todo gasto de transferencia para hacer llegar el pago a nuestro banco va por cuenta del cliente.
                     </t>
                </p>
                <p t-if="o.incoterm_id"><strong>Incoterm: <span t-field="o.incoterm_id.code"/></strong></p>
                
                <br/>

                <style>
                  .tablabaja {
                      background-color: #<t t-esc='color2'/>;
                  }
                </style>
                
                <div style="display: flex; font-size:10pt">
                  <div class="tablabaja" style="width:49%; margin: 3px; padding: 5px; float:left; height:120px; ">
                    
                    <table style="width:100%">
                      <tr>
                        <td style="padding: 7px;">
                          <p t-if="o.payment_term_id" name="payment_term">
                              <strong>
                              <t t-if="o.partner_id.lang == 'en_US'">
                                PAYMENT TERM:
                             </t>
                             <t t-elif="o.partner_id.lang == 'fr_FR'">
                                DÉLAI DE PAIEMENT:
                             </t>
                             <t t-elif="o.partner_id.lang == 'it_IT'">
                                SCADENZA DI PAGAMENTO:
                             </t>
                             <t t-else="">
                                PLAZO DE PAGO:
                             </t>
                              </strong> <span t-field="o.payment_term_id.name"/>
                          </p>
                          <p t-if="o.payment_mode_id.note">
                              <strong>
                              <t t-if="o.partner_id.lang == 'en_US'">
                                PAYMENT MODE:
                             </t>
                             <t t-elif="o.partner_id.lang == 'fr_FR'">
                                MODE DE PAIEMENT:
                             </t>
                             <t t-elif="o.partner_id.lang == 'it_IT'">
                                MODALITÀ PAGA:
                             </t>
                             <t t-else="">
                                MODO DE PAGO:
                             </t>
                              </strong>
                              <span t-field="o.payment_mode_id.note"/>
                          </p>
                        </td>
                        
                      </tr>
                    </table>
                    
                  </div>
                  
                  <div class="tablabaja" style="width:49%; margin: 3px; padding: 5px; float:right; height:120px; ">
                    
                    <table style="width:100%">
                      <tr>
                        
                        <td style="padding: 7px;">
                          
                          <p t-if="o.date_due" name="date_due">
                              <strong>
                              <t t-if="o.partner_id.lang == 'en_US'">
                                DUE DATES:
                             </t>
                             <t t-elif="o.partner_id.lang == 'fr_FR'">
                                DATE D'ÉCHÉANCE:
                             </t>
                             <t t-elif="o.partner_id.lang == 'it_IT'">
                                SCADENZA:
                             </t>
